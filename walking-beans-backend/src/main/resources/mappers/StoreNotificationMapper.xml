<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="walking_beans.walking_beans_backend.mapper.StoreNotificationMapper">

    <!-- 알림 저장 -->
    <insert id="insertNotification">
        INSERT INTO store_notifications (store_id, message)
        VALUES (#{storeId}, #{message})
    </insert>

    <!-- 특정 가게의 알림 조회 -->
    <select id="getNotificationsByStoreId">
        SELECT * FROM store_notifications WHERE store_id = #{storeId} ORDER BY created_at DESC
    </select>

    <!-- 알림 읽음 상태 업데이트 -->
    <update id="markNotificationAsRead">
        UPDATE store_notifications SET is_read = TRUE WHERE notification_id = #{notificationId}
    </update>
</mapper>